@model OcupacaoMaquinaOFC.Models.AlocacaoHoras

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var maquina = ViewData["Maquinas"] as SelectList;
    var projeto = ViewData["Projetos"] as SelectList;
}

<h1>Editar</h1>

<h4>AlocacaoHoras</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="qtdHoraPorMaquina" class="control-label"></label>
                <input type="number" step="0.1" placeholder="Ex: 24" asp-for="qtdHoraPorMaquina" class="form-control" />
                <span asp-validation-for="qtdHoraPorMaquina" class="text-danger"></span>
            </div>
            @if (maquina != null)
            {
                <div class="form-group">
                    <label asp-for="maquina" class="control-label"></label>
                    <select asp-for="maquina" class="form-control" asp-items='(maquina).OrderBy(p => p.Text)'>
                        <option value="-1">Selecione a máquina</option>
                    </select>
                    <span asp-validation-for="maquina" class="text-danger"></span>
                </div>
            }
            
                @if (projeto != null)
                {
                <div class="form-group">
                    <label asp-for="projeto" class="control-label"></label>
                    <select asp-for="projeto" class="form-control" asp-items='(projeto).OrderBy(p => p.Text)'>
                        <option value="-1">Selecione o projeto</option>
                    </select>
                    <span asp-validation-for="projeto" class="text-danger"></span>
                </div>
            }
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
