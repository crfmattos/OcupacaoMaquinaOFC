@model OcupacaoMaquinaOFC.Models.AlocacaoHorasViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var maquina = ViewData["Maquinas"] as SelectList;
    var projeto = ViewData["Projetos"] as SelectList;
}

<h1>Deletar</h1>

<h3>Você tem certeza que deseja deletar esta máquina?</h3>
<div>
    <h4>AlocacaoHoras</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QtdHoraPorMaquina)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QtdHoraPorMaquina)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Maquina)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Maquina)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Projeto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Projeto)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="QtdHoraPorMaquina" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
