@model OcupacaoMaquinaOFC.Models.Maquina

@{
    ViewData["Title"] = "Adicionar máquina";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Adicionar uma nova máquina</h1>

<h4>Maquina</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" placeholder="Ex: Mufla" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LimiteHoras" class="control-label"></label>
                <input type="number" step="0.1" placeholder="Ex: 24" asp-for="LimiteHoras" class="form-control" />
                <span asp-validation-for="LimiteHoras" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorMaquina" class="control-label"></label>
                <input type="number" step="0.01" placeholder="Ex: 200000.00" asp-for="ValorMaquina" class="form-control" />
                <span asp-validation-for="ValorMaquina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar máquina" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
