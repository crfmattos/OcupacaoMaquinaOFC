@model OcupacaoMaquinaOFC.Models.Maquina

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Deletar</h1>

<h3>Você tem certeza que deseja deletar esta máquina?</h3>
<div>
    <h4>Máquina</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nome)
        </dd><dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.limiteHoras)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.limiteHoras)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.valorMaquina)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.valorMaquina)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.valorHora)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.valorHora)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="nome" />
        <input type="submit" value="Excluir máquina" class="btn btn-danger" /> 
        <a asp-action="Index">Voltar</a>
    </form>
</div>
