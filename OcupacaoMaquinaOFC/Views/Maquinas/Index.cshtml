@model IEnumerable<OcupacaoMaquinaOFC.Models.Maquina>

@{
    ViewData["Title"] = "Máquinas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Máquinas</h1>

<p>
    <a asp-action="Create">Adicionar nova máquina</a>
</p>

<form asp-controller="Maquinas" asp-action="Index" method="get">
    <p>
        <input type="text" placeholder="Buscar máquinas..." name="SearchString" />
        <input type="submit" value="Buscar"/>
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LimiteHoras)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorMaquina)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorHora)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LimiteHoras)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorMaquina)
            </td><td>
                @Html.DisplayFor(modelItem => item.ValorHora)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Exibir detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
